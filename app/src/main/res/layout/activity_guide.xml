<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="470dp"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/user_guide_introduction"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@drawable/dashed_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Membuat Transaksi"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/guide_transaction" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/user_guide_transaction"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@drawable/dashed_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Membuat Anggaran"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/guide_budget" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/user_guide_budgeting"/>
    </LinearLayout>

</ScrollView>